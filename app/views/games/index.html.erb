<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Easy of use</th>
      <th>Content quality</th>
      <th>Versatility</th>
      <th>Pedagogical aspects</th>
      <th>Didactical resources</th>
      <th>Stimulates the initiative and self learning</th>
      <th>Audiovisual quality</th>
      <th>Technical and static elements</th>
      <th>Navigation and interaction</th>
      <th>Originality and use of advanced tecnology</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= game.easy_of_use %></td>
        <td><%= game.content_quality %></td>
        <td><%= game.versatility %></td>
        <td><%= game.pedagogical_aspects %></td>
        <td><%= game.didactical_resources %></td>
        <td><%= game.stimulates_the_initiative_and_self_learning %></td>
        <td><%= game.audiovisual_quality %></td>
        <td><%= game.technical_and_static_elements %></td>
        <td><%= game.navigation_and_interaction %></td>
        <td><%= game.originality_and_use_of_advanced_tecnology %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

