<div class="container center">
<h3>Evaluations: <%= $game.name %></h3>
</div>
<div class="container">
  <table>
    <thead>
      <th>Requisito</th>
      <th>Nota</th>
    </thead>
    <tbody>
      <tr>
        <td>Dimensão de Qualidade</td>
        <td><%= Evaluation.funcionality_dimension.nan? ? ' - ' : Evaluation.funcionality_dimension.round(2) %>%</td>
      </tr>
      <tr>
        <td>Dimensão de Eficiência</td>
        <td><%= Evaluation.efficiency_dimension.nan? ? ' - ' : Evaluation.efficiency_dimension.round(2) %>%</td>
      </tr>
      <tr>
        <td>Dimensão de Adaptabilidade</td>
        <td><%= Evaluation.adaptability_dimension.nan? ? ' - ' : Evaluation.adaptability_dimension.round(2) %>%</td>
      </tr>
      <tr>
        <td>Distância Euclidiana</td>
        <td><%= Evaluation.euclidean_distance.nan? ? ' - ' : Evaluation.euclidean_distance.round(2) %></td>
      </tr>
      <tr>
        <td>Qualidade do Sistema</td>
        <td><%= Evaluation.system_quality.nan? ? ' - ' : Evaluation.system_quality.round(2) %>%</td>
      </tr>
    </tbody>
  </table>
</div>
<br />
<div id="chart_div"></div>

<div class="container center">
  <%= link_to 'New Evaluation', new_game_evaluation_path, class: 'waves-effect waves-light btn' %>
</div>

<script type="text/javascript" charset="utf-8">

google.charts.load('current', {packages: ['corechart']});
google.charts.setOnLoadCallback(drawBasic);

function drawBasic() {

  var data = new google.visualization.DataTable();
  var data = new google.visualization.DataTable();
  data.addColumn('number', 'Dimensões');
  data.addColumn('number', 'Funcionalidade');
  data.addColumn('number', 'Eficiencia');
  data.addColumn('number', 'Adaptabilidade');

  data.addRows([
      [1,  0, 0, 0],
      [2, <%= Evaluation.funcionality_dimension%>, <%= Evaluation.efficiency_dimension %>, <%= Evaluation.adaptability_dimension %>]
  ]);


  var options = {
    title: 'Qualidade por Dimensão',
    series: {
      0: {targetAxisIndex: 0},
      1: {targetAxisIndex: 1}
    },
    hAxis: {
      title: 'Pontos'
    },
    vAxis: {
      title: '%'
    }
  };

  var chart = new google.visualization.LineChart(document.getElementById('chart_div'));

  chart.draw(data, options);
}
</script>
